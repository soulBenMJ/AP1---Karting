{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="assets/contact.css">
{% endblock %}

{% block title %}Ajoutez vos Contacts{% endblock %}

{% block body %}
<div class="containerc">
    {% if is_granted('ROLE_ADMIN') %}
        {% for contact in contactList %}
            <div class="contact-container">
                <strong>Nom :</strong> {{ contact.Nom }}<br>
                <strong>Penom :</strong> {{ contact.Prenom }}/10<br>
                <strong>Email :</strong> {{ contact.email }}<br>
                <strong>Num tel :</strong> {{ contact.numTel }}<br>
                <strong>Motif :</strong> {{ contact.Motif }}<br>
                <br>
            </div>
        {% endfor %}
    {% else %}
        <h1>Ajoutez vos Contacts</h1>
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <br>
            <button type="submit">Envoyer</button>
        {{ form_end(form) }}
    {% endif %}
</div>
{% endblock %}
